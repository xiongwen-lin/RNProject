<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_21"
    android:paddingRight="@dimen/dp_21">

    <TextView
        android:id="@+id/countrySelectTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:paddingStart="@dimen/dp_0"
        android:text="@string/location"
        android:textColor="@color/theme_text_color"
        android:textSize="@dimen/sp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/countrySelectName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_8"
        android:lines="1"
        android:paddingStart="@dimen/dp_0"
        android:text=""
        android:textColor="@color/theme_text_color"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="@+id/countrySelectArrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countrySelectTitle" />

    <ImageView
        android:id="@+id/countrySelectArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right_arrow_black"
        app:layout_constraintBottom_toBottomOf="@+id/countrySelectName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/countrySelectName" />

    <View
        style="@style/divider_thin"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countrySelectName" />

</androidx.constraintlayout.widget.ConstraintLayout>
