<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <include
        android:id="@+id/menuBar"
        layout="@layout/menu_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/menuBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:layout_weight="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="@dimen/sp_15"
                android:text="@string/router_device_detail_name">
            </TextView>

            <TextView
                android:id="@+id/deviceName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end"
                android:textColor="@color/black_80010c11"
                android:singleLine="true"
                android:textSize="@dimen/sp_15"
                android:text="--">
            </TextView>

        </LinearLayout>

        <View
            style="@style/divider_thin"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:visibility="gone"
            android:layout_weight="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="@dimen/sp_15"
                android:text="@string/router_device_detail_brand">
            </TextView>

            <TextView
                android:id="@+id/deviceType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end"
                android:textColor="@color/black_80010c11"
                android:singleLine="true"
                android:textSize="@dimen/sp_15"
                android:text="--">
            </TextView>

        </LinearLayout>

        <View
            android:visibility="gone"
            style="@style/divider_thin"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:layout_weight="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="@dimen/sp_15"
                android:text="@string/router_device_detail_ip_address">
            </TextView>

            <TextView
                android:id="@+id/deviceIpAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end"
                android:textColor="@color/black_80010c11"
                android:singleLine="true"
                android:textSize="@dimen/sp_15"
                android:text="--">
            </TextView>

        </LinearLayout>

        <View
            style="@style/divider_thin"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:layout_weight="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="@dimen/sp_15"
                android:text="@string/router_device_detail_mac_address">
            </TextView>

            <TextView
                android:id="@+id/deviceMacAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end"
                android:textColor="@color/black_80010c11"
                android:singleLine="true"
                android:textSize="@dimen/sp_15"
                android:text="--">
            </TextView>

        </LinearLayout>

        <View
            style="@style/divider_thin"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>