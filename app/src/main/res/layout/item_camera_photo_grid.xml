<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vCameraPhotoGridContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivCameraPhotoGirdThumb"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_0"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_4"
        android:scaleType="centerCrop"
        android:src="@drawable/default_preview_thumbnail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCameraPhotoGirdTime"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="02:02:02"
        android:textColor="@color/theme_white"
        android:textSize="@dimen/sp_12"
        android:visibility="visible"
        android:background="@drawable/bg_camera_photo_time"
        app:layout_constraintBottom_toBottomOf="@id/ivCameraPhotoGirdThumb"
        app:layout_constraintEnd_toEndOf="@id/ivCameraPhotoGirdThumb"
        app:layout_constraintStart_toStartOf="@id/ivCameraPhotoGirdThumb" />

</androidx.constraintlayout.widget.ConstraintLayout>
