<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_21"
        android:layout_marginEnd="@dimen/dp_21"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/button_white_state_list_radius_16">

        <TextView
            android:id="@+id/tvPresetPointEditTitle"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_21"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_21"
            android:text="@string/preset_point_title"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivPresetPointEditIcon"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_marginStart="@dimen/dp_56"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_56"
            android:src="@drawable/default_preview_thumbnail"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPresetPointEditTitle" />

        <com.afar.osaio.widget.InputFrameView
            android:id="@+id/ipvPresetPointEdit"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_0"
            android:layout_marginEnd="@dimen/dp_32"
            app:input_theme="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivPresetPointEditIcon" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glPresetPointEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <com.afar.osaio.widget.FButton
            android:id="@+id/btnPresetPointCancel"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/button_cancel_radius_22"
            android:maxLines="2"
            android:text="@string/cancel"
            android:textColor="@color/theme_green_subtext_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/glPresetPointEdit"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/ipvPresetPointEdit"
            app:layout_constraintTop_toBottomOf="@id/ipvPresetPointEdit" />

        <com.afar.osaio.widget.FButton
            android:id="@+id/btnPresetPointConfirm"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_24"
            android:maxLines="2"
            android:text="@string/confirm_upper"
            android:textColor="@color/theme_green_subtext_color"
            android:background="@drawable/button_gray_state_list_radius_22"
            app:layout_constraintBottom_toBottomOf="@id/btnPresetPointCancel"
            app:layout_constraintEnd_toEndOf="@id/ipvPresetPointEdit"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@id/glPresetPointEdit"
            app:layout_constraintTop_toTopOf="@id/btnPresetPointCancel" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>

