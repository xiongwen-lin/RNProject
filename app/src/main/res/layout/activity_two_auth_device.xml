<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <include
        android:id="@+id/mbTwoAuthDevice"
        layout="@layout/menu_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.afar.osaio.widget.LabelTextItemView
        android:id="@+id/livTwoAuthDeviceName"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mbTwoAuthDevice" />

    <com.afar.osaio.widget.LabelTextItemView
        android:id="@+id/livTwoAuthDeviceModel"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_21"
        android:layout_marginEnd="@dimen/dp_21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/livTwoAuthDeviceName" />

    <com.afar.osaio.widget.LabelTextItemView
        android:id="@+id/livTwoAuthDeviceLastActivityTime"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_21"
        android:layout_marginEnd="@dimen/dp_21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/livTwoAuthDeviceModel" />

    <com.afar.osaio.widget.FButton
        android:id="@+id/btnTwoAuthDeviceRemove"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_290"
        android:layout_marginEnd="@dimen/dp_50"
        android:layout_marginBottom="45dp"
        android:paddingLeft="@dimen/dp_21"
        android:paddingRight="@dimen/dp_21"
        android:text="@string/two_auth_device_remove_from_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/livTwoAuthDeviceLastActivityTime" />

</androidx.constraintlayout.widget.ConstraintLayout>
