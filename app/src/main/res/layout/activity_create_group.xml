<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        android:id="@+id/menuBar"
        layout="@layout/menu_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCreateGroupTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_54"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginEnd="@dimen/dp_54"
            android:gravity="center_horizontal"
            android:text="@string/creat_group_detail_info"
            android:textColor="@color/theme_text_color"
            android:textSize="@dimen/sp_15" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tlSwitchType"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_21"
            app:tabBackground="@android:color/transparent"
            app:tabIndicatorHeight="@dimen/dp_0"
            app:tabRippleColor="@null"
            app:tabSelectedTextColor="@color/theme_text_color"
            app:tabTextAppearance="@android:style/TextAppearance.Holo.Small"
            app:tabTextColor="@color/theme_text_gray" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vpSwitchType"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
