<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDeviceOwnerNametLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:text="@string/scan_owner"
        android:gravity="center"
        android:textColor="@color/gray_616161"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDeviceOwnerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="2"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:text="@string/unknown"
        android:gravity="center"
        android:textColor="@color/theme_text_color"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDeviceOwnerMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:text="@string/unknown"
        android:gravity="center"
        android:textColor="@color/theme_text_color"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/tvDeviceIcon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_171"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_46"
        android:minWidth="@dimen/dp_94"
        android:src="@drawable/nooie_cam_big" />
</LinearLayout>
